{
  "vim_mode": true,
  "icon_theme": "Catppuccin Latte",
  "ui_font_size": 18,
  "buffer_font_size": 18,

  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Soft"
  },

  "autosave": "on_focus_change",
  "format_on_save": "off",

  "buffer_font_weight": 400,
  "buffer_font_family": "JetBrainsMono Nerd Font",

  "tab_bar": {
    "show": false
  },

  "file_types": {
    "PHP": ["*.php"],
    "Blade": ["*.blade.php"]
  },

  "outline_panel": {
    "dock": "right"
  },

  "project_panel": {
    "default_width": 300,
    "scrollbar": {
      "show": "never"
    }
  },

  "confirm_quit": true,

  "languages": {
    "PHP": {
      "language_servers": ["intelephense"],
      "formatter": "language_server"
    }
  },

  "diagnostics": {
    "inline": {
      "enabled": true
    }
  }
}
