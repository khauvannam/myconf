{
  "vim_mode": true,

  "indent_guides": {
    "coloring": "fixed"
  },
  "icon_theme": "Catppuccin Latte",
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "scroll_beyond_last_line": "off",
  "gutter": {
    "line_numbers": false
  },

  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Soft"
  },

  "autosave": "on_focus_change",
  "format_on_save": "off",

  "buffer_font_weight": 400,
  "buffer_font_family": "JetBrainsMono Nerd Font",

  "tab_bar": {
    "show": false
  },

  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"],
    "PHP": ["*.php"],
    "Blade": ["*.blade.php"]
  },

  "outline_panel": {
    "dock": "right"
  },

  "project_panel": {
    "default_width": 300,
    "indent_guides": {
      "show": "never"
    },
    "scrollbar": {
      "show": "never"
    },

    "git_status": true
  },

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "toolbar": {
    "quick_actions": false,
    "selections_menu": false
  },

  "chat_panel": {
    "button": "never"
  },

  "terminal": {
    "button": false
  },

  "notification_panel": {
    "button": false
  },

  "agent": {
    "version": "1",
    "button": false
  },

  "search": {
    "button": false
  },

  "collaboration_panel": {
    "button": false
  },

  "confirm_quit": true,

  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor"],
      "formatter": "language_server"
    }
  },

  "diagnostics": {
    "inline": {
      "enabled": true
    }
  }
}
